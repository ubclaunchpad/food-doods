{
    "name": "food-doods-user",
    "version": "0.0.0",
    "description": "The user service for the Food Management application.",
    "repository": {
        "type": "git",
        "url": "https://github.com/ubclaunchpad/food-doods"
    },
    "scripts": {
        "build": "tsc",
        "lint": "tslint -c ../tslint.json ./src/**/*.ts",
        "start": "env-cmd -f ../config/dev.env node -r ts-node/register ./src/app.ts",
        "start:dev": "nodemon -x \"npm run lint && npm run build && npm run start\"",
        "test": "npm run build && env-cmd -f ../config/dev.env jest --detectOpenHandles --runInBand --coverage"
    },
    "dependencies": {
        "@types/bcrypt": "^3.0.0",
        "@types/express": "^4.17.2",
        "@types/jsonwebtoken": "^8.3.5",
        "@types/mongodb": "^3.3.6",
        "@types/mongoose": "^5.5.23",
        "axios": "^0.21.1",
        "bcrypt": "^3.0.6",
        "body-parser": "^1.19.0",
        "cookie-parser": "~1.4.4",
        "dotenv": "^8.2.0",
        "express": "~4.16.1",
        "express-validator": "^6.2.0",
        "jsonwebtoken": "^8.5.1",
        "mongodb": "^3.3.3",
        "mongoose": "^5.7.7",
        "ts-jest": "^25.2.1"
    },
    "devDependencies": {
        "@types/jest": "^25.1.3",
        "debug": "^2.6.9",
        "env-cmd": "^10.0.1",
        "jest": "^24.9.0",
        "nodemon": "^1.19.4",
        "prettier": "^1.18.2",
        "ts-node": "^8.7.0",
        "tslint": "^5.20.0",
        "tslint-config-prettier": "^1.18.0",
        "tslint-plugin-prettier": "^2.0.1",
        "typescript": "^3.6.4"
    },
    "nodemonConfig": {
        "watch": [
            "src"
        ],
        "ext": "ts"
    }
}
