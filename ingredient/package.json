{
    "name": "food-doods-ingredient",
    "version": "0.0.1",
    "description": "The ingredient service for the Food Doods app.",
    "main": "index.js",
    "repository": "https://github.com/ubclaunchpad/food-doods",
    "author": "Narendra Syahrasyad",
    "license": "MIT",
    "dependencies": {
        "body-parser": "^1.19.0",
        "express": "^4.17.1",
        "pg": "^7.12.1",
        "pg-promise": "^9.3.3"
    },
    "devDependencies": {
        "@types/express": "^4.17.1",
        "@types/jest": "^24.0.20",
        "@types/node": "^12.11.7",
        "@types/pg": "^7.11.2",
        "env-cmd": "^10.0.1",
        "jest": "^24.9.0",
        "nodemon": "^1.19.4",
        "prettier": "^1.18.2",
        "ts-node": "^8.4.1",
        "tslint": "^5.20.0",
        "tslint-config-prettier": "^1.18.0",
        "tslint-plugin-prettier": "^2.0.1",
        "typescript": "^3.6.4"
    },
    "scripts": {
        "build": "tsc",
        "lint": "tslint -c ../tslint.json ./src/**/*.ts",
        "start": "env-cmd -f ./config/dev.env node -r ts-node/register ./src/index.ts",
        "start:dev": "env-cmd -f ./config/dev.env nodemon",
        "start:docker": "env-cmd -f ./config/dev.env node ./dist/index.js"
    },
    "nodemonConfig": {
        "ignore": [
            "**/*.test.ts",
            "**/*.spec.ts",
            ".git",
            "node_modules"
        ],
        "watch": [
            "src"
        ],
        "exec": "npm start",
        "ext": "ts"
    }
}
